<style lang="scss">
	@import '@styles/config';

	.footer,
	.footer__items {
		display: flex;
		flex-direction: column;
	}

	.footer {
		position: relative;
		bottom: 0;
		height: 190px;
		padding: 10px 30px;
		justify-content: center;
		align-items: center;
		color: $__sub;
		font-size: $__font12;
		background: transparent linear-gradient(93deg, #3d56de 0%, #1f3195 100%) 0% 0%
			no-repeat padding-box;
	}

	.footer__items {
		width: 100%;
		margin-bottom: 30px;
	}

	.footer__item {
		font-weight: 500;
		text-align: center;

		&:not(:last-child) {
			@include underline($__width: 100%);
			&::after {
				background-color: $__sub;
			}
		}
	}

	.footer__item_link {
		width: 100%;
		display: block;
		position: relative;
		&::after {
			content: '';
			background-image: url('@assets/icons/navigate_next_FILL0_wght400_GRAD0_opsz24.svg');
			background-repeat: no-repeat;
			width: 1rem;
			height: 1.5rem;
			position: absolute;
			top: -0.15rem;
			right: 1rem;
			filter: invert(100%) sepia(1%) saturate(0%) hue-rotate(8deg) brightness(110%)
				contrast(100%);
		}
	}

	@media screen and (min-width: 768px) {
		.footer,
		.footer__items {
			flex-direction: row;
			align-items: center;
			word-break: keep-all;
		}

		.footer {
			justify-content: space-between;
			gap: 2rem;
		}

		.footer__items {
			width: fit-content;
			gap: 2.5rem;
		}

		.footer__items,
		.footer__item {
			margin-bottom: 0;
		}

		.footer__item {
			&:not(:last-child) {
				margin: 0;
			}
			&::after {
				display: none;
			}
		}

		.footer__item_link {
			&::after {
				right: -1.25rem;
			}
		}
	}
</style>
