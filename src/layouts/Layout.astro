---
import '@styles/main.scss';

import Footer from '@components/layout/Footer.astro';
import Header from '@components/layout/Header.astro';
import NavMenu from '@components/layout/NavMenu.astro';
import Particules from '@components/ui/Particules.astro';

const { headTitle } = Astro.props;
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;200;300;400;500;700&display=swap"
			rel="stylesheet"
		/>
		<title>{headTitle}</title>
	</head>
	<body>
		<Particules />
		<Header />
		<NavMenu />
		<main>
			<slot />
		</main>
		<Footer />
		<a href="#section-top" class="return-top-btn">Return Top</a>
	</body>
</html>

<script>
	const returnTopBtn = document.getElementsByClassName(
		'return-top-btn'
	)[0] as HTMLAnchorElement;

	returnTopBtn.addEventListener('click', () => {
		returnTopBtn.classList.remove('active');
	});

	window.addEventListener('scroll', () => {
		if (window.scrollY > 190) {
			returnTopBtn.classList.add('active');
		} else {
			returnTopBtn.classList.remove('active');
		}
	});
</script>

<style lang="scss">
	@import '@styles/config';
	.return-top-btn {
		position: fixed;
		bottom: 0;
		right: 0;
		color: transparent;
		width: 0rem;
		background-color: $__main;
		display: flex;
		justify-content: center;
		align-items: center;

		z-index: -10;
		width: 0;
		height: 0;
		overflow: hidden;
		opacity: 0;
		transition:
			opacity 1s ease,
			1.2s z-index 1s,
			1.2s width 1s,
			1.2s height 1s;

		&.active {
			z-index: 1001;
			height: 4rem;
			width: 4rem;
			padding: 1rem 0.5rem;
			opacity: 1;
			transition: opacity 1s ease;

			&::after {
				content: '';
				background-image: url('@assets/icons/keyboard_arrow_up_FILL0_wght400_GRAD0_opsz24.svg');
				background-repeat: no-repeat;
				position: absolute;
				background-size: 32px;
				width: 32px;
				height: 32px;
				filter: $__filter_white;
			}
		}
	}
</style>
