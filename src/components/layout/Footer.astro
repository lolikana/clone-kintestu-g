<style lang="scss">
	.footer,
	.footer__items {
		display: flex;
		flex-direction: column;
	}

	.footer {
		min-height: 120px;
		padding: 10px 30px;
		justify-content: center;
		align-items: center;
		color: $__sub;
		font-size: $__font12;
		background: $__linear_blue;
	}

	.footer__items {
		width: 100%;
		margin-bottom: 30px;
	}

	.footer__item {
		font-weight: 500;
		text-align: center;

		&:not(:last-child) {
			@include underline($__width: 100%);
			&::after {
				background-color: $__sub;
			}
		}
	}

	.footer__item_link {
		width: 100%;
		display: block;
		position: relative;
		&::after {
			filter: $__filter_white;
		}
	}

	@media screen and (min-width: 768px) {
		.footer,
		.footer__items {
			flex-direction: row;
			align-items: center;
			word-break: keep-all;
		}

		.footer {
			justify-content: space-between;
			gap: 2rem;
		}

		.footer__items {
			width: fit-content;
			gap: 2.5rem;
		}

		.footer__items,
		.footer__item {
			margin-bottom: 0;
		}

		.footer__item {
			&:not(:last-child) {
				margin: 0;
			}
			&::after {
				display: none;
			}
		}

		.footer__item_link {
			&::after {
				right: -1.25rem;
			}
		}
	}
</style>
