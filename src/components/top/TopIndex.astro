---
import TopImage from '@assets/images/visual_sp.jpg';
import { Image } from 'astro:assets';

import ArticleMessage from './ArticleMessage.astro';
import TopLinks from './TopLinks.astro';
import TopTitles from './TopTitles.astro';
---

<section id="section-top" class="section-top">
	<div class="top__titles italic">
		<TopTitles />
	</div>
	<div class="top__image">
		<Image
			src={TopImage}
			alt="パウドッググループホールティングス 情報系 新卒採用ページ"
			loading={'eager'}
		/>
	</div>
	<div class="top__links">
		<TopLinks />
	</div>
	<ArticleMessage class="article-message" />
</section>

<style lang="scss">
	@import '@styles/config';

	.section-top {
		max-height: 1000px;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		grid-template-rows: repeat(2, auto) 1fr;
		grid-column-gap: 2rem;
	}

	.top__titles,
	.top__image {
		flex: 1;
	}

	.top__titles {
		grid-area: 1 / 1 / 2 / 2;
	}

	.top__image {
		grid-area: 1 / 2 / 3 / 3;
		margin-right: -2rem;
	}

	.top__links {
		display: none;
	}

	.article-message {
		grid-area: 3 / 1 / 4 / 3;
	}

	@media screen and (min-width: 768px) {
		.top__titles {
			margin: 0;
			&_eng {
				font-size: 100px;
				margin-bottom: 3rem;
			}

			&_jp {
				font-weight: 300;
			}
		}

		.top__image {
			grid-area: 1 / 2 / 4 / 3;
			max-width: 545px;
		}

		.article-message {
			grid-area: 3 / 1 / 4 / 2;
			margin: auto 0;
		}
	}

	@media screen and (min-width: 1024px) {
		.top__links {
			display: block;
			grid-area: 2 / 1 / 3 / 2;
			color: #000000;
			@include font-responsive(12, 14);
			font-size: $__font14;
			margin: 5rem 0 5rem;
		}
	}
</style>
